    "version": "0.2.0",
    "configurations": [

        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "DemoApiApplication",
            "request": "launch",
            "mainClass": "com.lil.springperformance.api.DemoApiApplication",
            "projectName": "api"
        },
        {
            "type": "java",
            "name": "DemoApiApplication - FlightRecorder",
            "request": "launch",
            "mainClass": "com.lil.springperformance.api.DemoApiApplication",
            "projectName": "api",
            "vmArgs": "-XX:+FlightRecorder -XX:StartFlightRecording=duration=20s,filename=flight-api.jfr"
        },
        {
            "type": "java",
            "name": "DemoClientApplication",
            "request": "launch",
            "mainClass": "com.lil.springperformance.client.DemoClientApplication",
            "projectName": "client"
        },
        {
            "type": "java",
            "name": "DemoClientApplication - Glowroot",
            "request": "launch",
            "mainClass": "com.lil.springperformance.client.DemoClientApplication",
            "projectName": "client",
            "vmArgs": "-Xms100M -Xmx100M -javaagent:/workspaces/performance-spring/glowroot/glowroot.jar"
        },
        {
            "type": "java",
            "name": "DemoClientApplication - JVM Challenge",
            "request": "launch",
            "mainClass": "com.lil.springperformance.client.DemoClientApplication",
            "projectName": "client",
            "vmArgs": "-Xms100M -Xmx100M"
        },
        {
            "type": "java",
            "name": "QuotersIncorporatedApplication",
            "request": "launch",
            "mainClass": "org.springframework.quoters.QuotersIncorporatedApplication",
            "projectName": "quoters-incorporated"
        }
    ]
}